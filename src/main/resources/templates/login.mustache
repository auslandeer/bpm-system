<body style="background: #f2f2f3">

<div class="container" style="margin-top:10%;">

    <div class="row justify-content-md-center">
        <div class="col-sm-3">
            <label><h3 style="font-family: 'Roboto', sans-serif;">Войдите в систему</h3></label>
        </div>
    </div>

    <div class="row justify-content-md-center" style="font-family: 'Roboto: 300, 400', sans-serif;">
        <div class="col-sm-4" style="background: white; border: 1px solid #d8dce0; border-radius: 10px;">
            <form  action="/login" method="post" style="margin: 20px">
                <div class="form-group">
                    <label>Учетная запись</label>
                    <input type="text" class="form-control" name="username" aria-describedby="emailHelp" placeholder="Введите логин">
                    <small class="form-text text-muted">Учетная запись является уникальной</small>
                </div>
                <div class="form-group">
                    <label>Пароль</label>
                    <input type="password" class="form-control" name="password" placeholder="Введите пароль">
                    <input type="hidden" name="_csrf" value="{{_csrf.token}}" />
                </div>
                <button type="submit" class="btn btn-outline-info">Войти</button>
            </form>
        </div>
<!--        <div class="col col-lg-2">-->

<!--        </div>-->
    </div>
</div>

